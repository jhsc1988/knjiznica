@model knjiznica.Models.Posudba

@{
    ViewData["Title"] = "Detalji";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Posudba</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Knjiga)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Knjiga.Naslov)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.datumPosudbe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.datumPosudbe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.datumVraćanja)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.datumVraćanja)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Promjena</a> |
    <a asp-action="Index">Povratak na listu</a>
</div>
