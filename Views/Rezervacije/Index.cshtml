@model IEnumerable<knjiznica.Models.Rezervacija>

@{
    ViewData["Title"] = "Rezervacije";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Kreiraj novu</a>
</p>
<form type="get">
    Pretraga po naslovu:
    <input type="search" name="search" value="@ViewBag.Search" />
    <input type="submit" value="Traži" />

</form>
<div style="height: 600px; overflow-y: scroll; background-color: #fff">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Knjiga)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.datumRezervacija)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Knjiga.Naslov)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.datumRezervacija)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">promjena</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">detalji</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">brisanje</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
